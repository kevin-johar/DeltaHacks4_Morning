<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nextdev.googlemapsexperiment.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/outputDestinations"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/typeDestination"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/selectDestinationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Destination" />

        <TextView
            android:id="@+id/percentageOutput"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="52dp" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start!"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="262dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
